    <%- include('./partials/header') %>


        <main class="form-register">
            <section class="register-form">
                <!--ACÁ VA EL CÓDIGO DEL CUERPO DE LA PÁG-->

                <form 
                    method="post" 
                    action="/users/register" 
                    class="section-register"  
                    enctype="multipart/form-data" 
                    id="form">
                        <h4>Formulario de Registro</h4>
              
                    <!--Nombre-->
                    <label for="first_name"></label>
                    <input 
                        class="controls <%= locals.errors && errors.first_name ? 'is-invalid' : null %>  " 
                        type="text"
                        name="first_name" 
                        value= "<%= locals.oldData ? oldData.first_name : null %>"
                        id="first_name"
                        placeholder="Nombre">
                        <!--Validación nombres-->
                        <% if (locals.errors && errors.first_name) { %>
                              <p class= "text-validation">
                                <%= errors.first_name.msg %>
                              </p>
                            <% } %>


                               <!--Apellido-->
                    <label for="last_name"></label>
                    <input 
                        class="controls <%= locals.errors && errors.last_name ? 'is-invalid' : null %>  " 
                        type="text"
                        name="last_name" 
                        value= "<%= locals.oldData ? oldData.last_name : null %>"
                        id="last_name"
                        placeholder="Apellido">
                        <!--Validación apellido-->
                        <% if (locals.errors && errors.last_name) { %>
                              <p class= "text-validation">
                                <%= errors.last_name.msg %>
                              </p>
                            <% } %>

                                  <!--e-mail-->
                    <label for="email"></label>
                    <input 
                        class="controls <%= (locals.errors && errors.email) ? 'is-invalid' : null %>  " 
                        type="text"
                        name="email"
                        value="<%=locals.oldData ? oldData.email : null %>"
                        id="email"
                        placeholder="Correo electrónico">
                    <!--Validación email-->
                    <% if (locals.errors && errors.email) { %>
                        <p class= "text-validation">
                            <%= errors.email.msg %>
                        </p>
                        <% } %>

                    <label for="password"></label>
                    <input 
                        class="controls <%= locals.errors && errors.password ? 'is-invalid' : null %>  " 
                        type="password"
                        name="password"
                        id="password"
                        placeholder="Contraseña">
                        <% if (locals.errors && errors.password) { %>
                            <p  class= "text-validatip n">
                                <%= errors.password.msg %>
                            </p>
                            <% } %>
                        <!--Imágen de usuario-->
                        <label for="imgUser"></label>
                        <input 
                        type="file" 
                        name="imgUser" 
                        id="imgUser">
                        <% if (locals.errors && errors.imgUser) { %>
                            <p class= "text-validation">
                                <%= errors.imgUser.msg %>
                            </p>
                            <% } %>
                        <p class="warnings" id="warnings"></p>

                      
                            <button type="submit"  class="boton-register">Registrarse</button>
                        </form>
